<resources>

    <style name="WPIamUI" parent="android:Theme.Material.Light"></style>

    <style name="WPIamUI.CollapseButton" parent="WPIamUI.CollapseButtonBase">
        <!-- nothing here, see values-v21 -->
    </style>

    <style name="WPIamUI.CollapseButtonBase" parent="android:Widget.Material.Button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/wonderpush_android_sdk_collapse</item>

        <item name="android:layout_marginRight">-12dp</item>
        <item name="android:layout_marginTop">-12dp</item>
    </style>

    <style name="WPIamUI.Modal" parent="@style/WPIamUI">
        <!-- nothing here, see values-v21 -->
    </style>

    <style name="WPIamUI.ModalBody" parent="android:TextAppearance.Material.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WPIamUI.ModalImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:minHeight">@dimen/minImageHeight</item>
        <item name="android:minWidth">@dimen/minImageWidth</item>
        <item name="android:src">@drawable/wonderpush_android_sdk_image_placeholder</item>
    </style>

    <style name="WPIamUI.Card" parent="@style/WPIamUI">
        <!-- nothing here, see values-v21 -->
    </style>

    <style name="WPIamUI.Card.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:minHeight">@dimen/minImageHeight</item>
        <item name="android:minWidth">@dimen/minImageWidth</item>
        <item name="android:src">@drawable/wonderpush_android_sdk_image_placeholder</item>
    </style>

    <style name="WPIamUI.Card.Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingSmall</item>
        <item name="android:paddingLeft">@dimen/paddingSmall</item>
        <item name="android:paddingRight">@dimen/paddingSmall</item>
    </style>

    <style name="WPIamUI.Card.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/paddingSmall</item>
    </style>

    <style name="WPIamUI.Card.ActionBar.Button" parent="android:Widget.Material.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="WPIamUI.ResizableImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:minHeight">@dimen/minImageHeight</item>
        <item name="android:minWidth">@dimen/minImageWidth</item>
        <item name="android:src">@drawable/wonderpush_android_sdk_image_placeholder</item>
    </style>

    <style name="WPIamUI.Banner" parent="@style/WPIamUI">
        <!-- nothing here, see values-v21 -->
    </style>

    <style name="WPIamUI.Text.BannerTitle" parent="android:TextAppearance.Material.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WPIamUI.Text.Title" parent="android:TextAppearance.Material.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
